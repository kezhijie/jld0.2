<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="121dp"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="121dp"
        android:background="@mipmap/dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--        <TextView-->
        <!--            android:id="@+id/title"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:text="@string/tip"-->
        <!--            android:textColor="#ff1b1c23"-->
        <!--            android:textSize="16sp" />-->

        <ImageView
            android:id="@+id/tip"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/tip"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:textColor="#3A8CFA"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <Button

                android:id="@+id/confirm"
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_marginTop="0dp"

                android:background="@drawable/btn_blue"
                android:button="@null"

                android:checked="true"
                android:drawableLeft="@mipmap/confirm_ico"
                android:drawablePadding="5dip"
                android:paddingLeft="8dp"
                android:text="@string/msg_confirm"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="9sp"></Button>


            <Button

                android:id="@+id/cancel"
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_marginLeft="30dp"

                android:background="@drawable/btn_blue"
                android:button="@null"

                android:checked="true"
                android:drawableLeft="@mipmap/cancel_ico"
                android:drawablePadding="5dip"
                android:paddingLeft="8dp"
                android:text="@string/msg_cancel"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="9sp"></Button>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>