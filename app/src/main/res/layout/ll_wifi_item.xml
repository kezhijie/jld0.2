<!-- res/layout/ll_wifi_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wifi_item"
    android:layout_width="match_parent"
    android:layout_height="26dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/ll_wifi_item_connect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="10dp"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/wifi_select"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_wifi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="1111"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_wifi_item_lock"
            android:layout_width="9dp"
            android:layout_height="11dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:src="@mipmap/lock" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"

            android:layout_gravity="right"
            android:src="@mipmap/wifi" />
    </LinearLayout>

    <!-- 引用细线布局 -->
<!--    <include layout="@layout/line_shape" />-->
</LinearLayout>
