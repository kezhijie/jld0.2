<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"

    android:layout_height="480dp"
    android:layout_gravity="center_horizontal"
    android:background="@mipmap/main_bg"
    tools:context="com.sinpm.app.ui.UnlockTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="12.5dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="11dp"
                        android:src="@mipmap/back_ico"
                        ></ImageView>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/logo_top" />

                </LinearLayout>


                <LinearLayout

                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top">

                    <ImageView
                        android:id="@+id/set"
                        android:layout_width="12.5dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="11dp"
                        android:src="@mipmap/settings"></ImageView>


                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/btn_wifi_new"-->
                    <!--                        android:layout_width="12.5dp"-->
                    <!--                        android:layout_height="12dp"-->
                    <!--                        android:layout_marginLeft="10dp"-->
                    <!--                        android:layout_marginTop="11dp"-->
                    <!--                        android:src="@mipmap/wifi"></ImageView>-->


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/check_net"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_refresh"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/ic_erro_defalut"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/img_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_erro_defalut" />
            </RelativeLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/paywaysRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/timeRecycleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

    </LinearLayout>


</LinearLayout>